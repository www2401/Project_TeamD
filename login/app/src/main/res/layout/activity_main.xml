<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="145dp">

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/et_pw"
            android:layout_marginEnd="27dp"
            android:layout_toStartOf="@+id/et_id"
            android:text="ID(E-mail)"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/et_id"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="94dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/tv_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/et_pw"
            android:layout_alignBottom="@+id/et_pw"
            android:layout_alignEnd="@+id/tv_id"
            android:text="Password"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/et_pw"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_below="@+id/et_id"
            android:layout_alignStart="@+id/et_id"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btnPost"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="POST"/>
</LinearLayout>