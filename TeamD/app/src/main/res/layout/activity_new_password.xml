<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ilove.teamd.userfage.new_password">

    <RelativeLayout
        android:layout_width="369dp"
        android:layout_height="509dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView15"
            android:layout_marginTop="125dp"
            android:text=" Forgot your password"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp"/>

        <TextView
            android:id="@+id/textView15"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView13"
            android:layout_marginStart="24dp"
            android:text=" Please choose a new password to finish signing in. Read some tips on creating a secure password (within 8 letters)"/>

        <EditText
            android:id="@+id/et_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="New password"
            android:inputType="textPassword"
            android:layout_below="@+id/textView15"
            android:layout_alignStart="@+id/et_id"/>

        <EditText
            android:id="@+id/et_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_pw"
            android:layout_marginEnd="17dp"
            android:layout_marginTop="13dp"
            android:layout_toStartOf="@+id/bt_pw"
            android:ems="10"
            android:hint="Re-enter new password"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="17dp"
            android:layout_marginTop="17dp"
            android:text="Change password"
            android:layout_below="@+id/et_id"
            android:layout_alignEnd="@+id/et_id"/>

        <Button
            android:id="@+id/bt_pw"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginEnd="18dp"
            android:text="click"
            android:layout_alignTop="@+id/et_id"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
